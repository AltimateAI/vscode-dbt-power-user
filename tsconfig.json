{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "types": ["node", "jest", "vscode"],
    "baseUrl": ".",
    "paths": {
      "@extension": ["./src/modules.ts"],
      "@lib": ["./src/lib/index"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "webview_panels",
    "new_lineage_panel",
    "dist",
    "out"
  ]
}
